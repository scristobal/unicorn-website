---
import type { CollectionEntry } from 'astro:content';

interface Props {
    article: CollectionEntry<'articles'>;
}
const { article } = Astro.props;
---

<dt class="mb-4">
    <h3 class="text-xl font-semibold">{article.data.heading}</h3>
</dt>
<dd class="mb-16">
    <p>
        {article.data.summary}
    </p>
</dd>
